<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<!-- REGRAS DE NAVEGAÇÃO -->
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
			<navigation-case>
				<from-outcome>inicio</from-outcome>
				<to-view-id>/index.jsf</to-view-id>
				<redirect />
			</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<navigation-case>
			<from-outcome>usuario</from-outcome>
			<to-view-id>/publico/usuario.jsf</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<navigation-case>
			<from-outcome>usuarioSucesso</from-outcome>
			<to-view-id>/publico/usuarioSucesso.jsf</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

</faces-config>
